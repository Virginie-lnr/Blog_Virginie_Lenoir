{% extends 'layout.html.twig' %}

{% block title %}
    Les utilisateurs
{% endblock %}

{% block content %}

    <div class="container-fluid mt-5 mb-5 ">
        <div class="row justify-content-center">
            {% for user in users %}
                <div class="card col-sm-12 col-lg-3 col-md-6 m-2">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.nom }} {{ user.prenom }}</h5>
                        <p class="card-text">Email : {{ user.email }}</p>
                        {% for user in user.roles %}
                          <p class="card-text">Role : {{ user }}</p>
                        {% endfor %}
                        <a href="" class="card-link">Promouvoir admin</a>
                        <a href="" class="card-link">Retirer r√¥le admin</a>
                        <a href="{{ path('app_userdelete', {id: user.id}) }}" class="card-link text-danger" onclick="return confirm('Es-tu sur de vouloir supprimer cet article?')">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    
{% endblock %}