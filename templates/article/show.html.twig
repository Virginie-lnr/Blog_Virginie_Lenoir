{% extends 'layout.html.twig' %}

{% block title %}
    Article {{ article.titre }}
{% endblock %}

{% block content %}
  <div class="container-fluid ml-5 sticky-footer" style="margin-top:50px;">
    <div class="row align-items-center">
      <img class="col-lg-6 col-md-6 col-sm-3" src="{{ asset('images/articles/' ~ article.image) }}" alt="article-img" style="max-width:400px;">
      <div class="col-lg-6 col-md-6 col-sm-6 ml-5">
        <h2>{{ article.titre }}</h2>
        <small>{{ article.dateCreation | date('d/m/Y') }}</small>
        <p>{{ article.contenu }}</p>
      </div>
    </div>
  </div>
{% endblock %}