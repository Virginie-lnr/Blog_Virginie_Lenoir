{% extends 'layout.html.twig' %}

{% block title %}
    Cr√©er un article
{% endblock %}

{% block content %}

  <div class="container mt-5 mb-5">
    {{ form_start(form) }}

      {{ form_row(form.titre) }}

      {{ form_label(form.contenu) }}
      {{ form_widget(form.contenu, {"attr":{"rows":10}}) }}

      {{ form_row(form.categories) }}
      {{ form_row(form.imageFile) }}

      {% if app.request.get('_route') == 'app_articleupdate' %}
        <div class="form-group">
          <button type="submit" id="article_Enregistrer" class="btn-primary btn mt-2">Editer l'article</button>
        </div>
      {% else %}
        <div class="form-group">
          <button type="submit" id="article_Enregistrer" class="btn-primary btn mt-2">Ajouter l'article</button>
        </div>
      {% endif %}

    {{ form_end(form) }}
  </div>

{% endblock %}