{% extends 'base.html.twig' %}

{% block title %}  {% endblock %}

{% block body %}

<header>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="{{ path('home') }}">Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
        
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_users') }}">Les utilisateurs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_articles') }}">Les articles</a>
          </li>
        </ul>
        
        <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">
          <ul class="navbar-nav ml-auto flex-nowrap">
          {% if app.user %}
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="{{ path('app_logout') }}">Se déconnecter</a>
            </li>
          {% else %}
            <li class="nav-item ml-auto">
              <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
            </li>
            <li class="nav-item">
              <a class="nav-link ml-auto" href="{{ path('app_register') }}">Créer un compte</a>
            </li>
          {% endif %}
          </ul>
        </div>
        
      </div>
    </div>
  </nav>
</header>

<main>
    {% block content %}
  
    {% endblock %}
</main>

<footer>

</footer>

{% endblock %}